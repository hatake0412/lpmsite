<h1>Listing responses</h1>
<h2><%= @package.name %></h2><%= @package.ver %>
<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Content</th>
    <th>Package</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @response.each do |response| %>
  <tr>
    <td><%= response.name %></td>
    <td><%= response.email %></td>
    <td><%= simple_format response.content %></td>
    <td><%= response.package_id %></td>
    <td><%= link_to 'Show', response %></td>
    <td><%= link_to 'Edit', edit_response_path(response) %></td>
    <td><%= link_to 'Destroy', response, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<%= form_for(@response) do |f| %>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, :size => "120x10" %>
  </div>
  <%= f.hidden_field :package_id %>
  <%= recaptcha_tags %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<br />
<%= link_to 'New Response', new_response_path %>
