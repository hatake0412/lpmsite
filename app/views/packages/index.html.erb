<table>
  <tr>
    <th>Name</th>
    <th>Ver</th>
    <th>Description</th>
    <th>Depends</th>
    <th>Cnt</th>
    <th>BBS</th>
    <th></th>
    <th></th>
  </tr>

<% @packages.each do |package| %>
  <tr>
    <td><a href="<%= package.note %>"><%= package.name %></a></td>
    <td><%= package.ver %></td>
    <td><%= package.description %></td>
    <td><%= package.depends %></td>
    <td><%= package.cnt %></td>
    <td><%= link_to 'BBS', :controller => 'bbs' %></td>
    <td><%= link_to 'Edit', edit_package_path(package) %></td>
    <td><%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

